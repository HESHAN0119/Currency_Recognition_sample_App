<!-- res/drawable/shadow_rectangle.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#B7FFFF00" /> <!-- Shadow color -->
            <corners android:radius="8dp" /> <!-- Adjust corner radius if needed -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#97FFFF00" /> <!-- Shadow color -->
            <corners android:radius="16dp" /> <!-- Adjust corner radius if needed -->
        </shape>
    </item>
    <!-- Background -->
    <item android:top="4dp" android:right="4dp" android:bottom="4dp" android:left="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#0000FF" /> <!-- Purple background color -->
            <corners android:radius="8dp" /> <!-- Adjust corner radius if needed -->
        </shape>
    </item>
    <!-- Border -->
    <item android:top="2dp" android:right="2dp" android:bottom="2dp" android:left="2dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="4dp"
                android:color="#FFFF00" /> <!-- Yellow border color -->
            <corners android:radius="8dp" /> <!-- Adjust corner radius if needed -->
        </shape>
    </item>
</layer-list>
